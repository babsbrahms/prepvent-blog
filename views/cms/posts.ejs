<% include ./common/header %>

	<header id="header">
		<div class="container">
			<div class="row">
				<div class="col-md-10">
					<h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span><a style="color: white; text-decoration: none; font-size: 32px;;" href="/">PreVENT Blog</a></h1>
				</div>

				<div class="col-md-2">
					<div class="dropdown create">
						<button class="btn btn-success" data-toggle="modal" data-target="#addPosts">
							<a type="button" >Add Posts</a></li>
						</button>
					</div>	
				</div>

			</div>
		</div>
	</header>

	<section id="main">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<!-- website overview -->
					<div class="panel panel-default ">
						<div class="panel-heading main-color-bg">
							<h3 class="panel-title"> Posts</h3>
						</div>
						<div class="panel-body">
							<div class="row">
								<div class="col-md-12">
								<div id="info">
									
								</div>
									<input type="text" id="search" class="form-control" placeholder="filter posts...">
								</div>
							</div>
							<div id="posts">
							<table class="table table-striped table-hover">
								<tr class="info">
									<th>Title</th>
									<th>Author</th>
									<th>category</th>
									<th>Created</th>
									<th></th>
								</tr>
								<%blogs.forEach(function(blog, i){%>
								
									<tr class="searchResult">
									<td><%=blog.title %></td>

									<td><%=blog.author %></td>
									

									<td><%=blog.category %></td>
									
									<td><%=blog.date %></td>
									<td><a class="btn btn-default" href="/cms/edit-posts/<%=blog._id %>">Edit</a> <button class="btn btn-danger delete-post" data-comment="<%=blog.comment %>" data-id="<%=blog._id %>">Delete</button></td>
								</tr>
								
								<%})%>
		
							</table>
							
						</div>
						</div>
						
					</div>
		

					
				</div>
			</div>
	</section>



	<script src="/javascripts/count.js"></script>
	<script src="/javascripts/cms-posts.js"></script>

	<% include ./common/footer %>


  
		
	 